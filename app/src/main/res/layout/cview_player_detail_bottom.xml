<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/group_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.24">

        <TextView
            android:id="@+id/txt_value_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="10"
            android:textColor="@color/search_text_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.7" />

        <TextView
            android:id="@+id/txt_title_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="13sp"
            android:text="슛"
            android:textColor="@color/search_text_color"
            app:layout_constraintTop_toBottomOf="@id/txt_value_1"
            app:layout_constraintLeft_toLeftOf="@id/txt_value_1"
            app:layout_constraintRight_toRightOf="@id/txt_value_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintLeft_toRightOf="@id/group_1"
        app:layout_constraintRight_toLeftOf="@id/group_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.24">

        <TextView
            android:id="@+id/txt_value_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="10"
            android:textColor="@color/search_text_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.7" />

        <TextView
            android:id="@+id/txt_title_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="13sp"
            android:text="유효 "
            android:textColor="@color/search_text_color"
            app:layout_constraintTop_toBottomOf="@id/txt_value_2"
            app:layout_constraintLeft_toLeftOf="@id/txt_value_2"
            app:layout_constraintRight_toRightOf="@id/txt_value_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintLeft_toRightOf="@id/group_2"
        app:layout_constraintRight_toLeftOf="@id/group_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.24">

        <TextView
            android:id="@+id/txt_value_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="10"
            android:textColor="@color/search_text_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.7" />

        <TextView
            android:id="@+id/txt_title_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="13sp"
            android:text="어시스트"
            android:textColor="@color/search_text_color"
            app:layout_constraintTop_toBottomOf="@id/txt_value_3"
            app:layout_constraintLeft_toLeftOf="@id/txt_value_3"
            app:layout_constraintRight_toRightOf="@id/txt_value_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintLeft_toRightOf="@id/group_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.24">

        <TextView
            android:id="@+id/txt_value_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="10"
            android:textColor="@color/search_text_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.7" />

        <TextView
            android:id="@+id/txt_title_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="13sp"
            android:text="득점"
            android:textColor="@color/search_text_color"
            app:layout_constraintTop_toBottomOf="@id/txt_value_4"
            app:layout_constraintLeft_toLeftOf="@id/txt_value_4"
            app:layout_constraintRight_toRightOf="@id/txt_value_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

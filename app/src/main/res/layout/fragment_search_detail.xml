<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_left_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/fragment_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.49"/>

    <ImageView
        android:id="@+id/img_right_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/fragment_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.49"/>


    <TextView
        android:id="@+id/img_vs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/layout_rounded"
        android:gravity="center"
        android:text="VS"
        android:textColor="@color/search_text_color"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_left_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_left_info" />

    <com.example.figle_m.SearchList.SearchDetailView.SearchDetailItemView
        android:id="@+id/cview_item1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/search_text_color"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.example.figle_m.SearchList.SearchDetailView.SearchDetailItemView
        android:id="@+id/cview_item2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/search_text_color"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.example.figle_m.SearchList.SearchDetailView.SearchDetailItemView
        android:id="@+id/cview_item3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/search_text_color"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.example.figle_m.SearchList.SearchDetailView.SearchDetailItemView
        android:id="@+id/cview_item4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/search_text_color"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.example.figle_m.SearchList.SearchDetailView.SearchDetailItemView
        android:id="@+id/cview_item5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/search_text_color"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.example.figle_m.SearchList.SearchDetailView.SearchDetailItemView
        android:id="@+id/cview_item6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/search_text_color"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
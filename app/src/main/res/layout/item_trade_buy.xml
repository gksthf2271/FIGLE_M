<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <TextView
        android:id="@+id/trade_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textScaleX="0.7"
        android:textSize="90sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="@id/buy_txt_date"
        app:layout_constraintRight_toRightOf="@id/buy_txt_date"
        app:layout_constraintTop_toTopOf="@id/buy_txt_date"
        tools:text="BUY"
        tools:textColor="@color/blue_color" />

    <TextView
        android:id="@+id/buy_txt_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/search_text_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        tools:text="2020-03-05-13:24:15" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buy_layout_trade_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록이 없습니다."
        android:textColor="@color/search_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/layout_recyclerview"
        app:layout_constraintLeft_toLeftOf="@id/layout_recyclerview"
        app:layout_constraintRight_toRightOf="@id/layout_recyclerview"
        app:layout_constraintTop_toTopOf="@id/layout_recyclerview" />

</androidx.constraintlayout.widget.ConstraintLayout>
